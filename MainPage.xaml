<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IMCCalculator.MainPage"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <!-- Cabecera -->
            <Frame CornerRadius="20" HasShadow="True" BorderColor="#4CAF50">
                <StackLayout Spacing="10">
                    <Image Source="https://cdn-icons-png.flaticon.com/256/4457/4457580.png"
                           Aspect="AspectFit"
                           HeightRequest="150"/>

                    <Label Text="Calculadora IMC"
                           HorizontalTextAlignment="Center"
                           TextColor="#1B5E20"
                           FontSize="32"
                           FontAttributes="Bold"
                           FontFamily="OpenSansSemibold"/>

                    <Label Text="Víctor Quezada"
                           HorizontalTextAlignment="Center"
                           TextColor="#2196F3"
                           FontSize="18"
                           FontAttributes="Italic"/>
                </StackLayout>
            </Frame>

            <!-- Campos de entrada -->
            <Frame CornerRadius="15" 
                    HasShadow="True" 
                    BackgroundColor="White"
                    Padding="15">
                <StackLayout Spacing="15">
                    <!-- Altura -->
                    <StackLayout Spacing="5">
                        <Label Text="📏 Altura (metros)"
                               TextColor="#607D8B"
                               FontSize="16"/>
                        <Entry Placeholder="Ej: 1.75"
                               Keyboard="Numeric"
                               x:Name="Altura"
                               BackgroundColor="#FFFDE7"
                               TextColor="#1B5E20"
                               FontSize="20"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                    </StackLayout>

                    <!-- Peso -->
                    <StackLayout Spacing="5">
                        <Label Text="⚖️ Peso (kg)"
                               TextColor="#607D8B"
                               FontSize="16"/>
                        <Entry Placeholder="Ej: 68.5"
                               Keyboard="Numeric"
                               x:Name="Peso"
                               BackgroundColor="#FFFDE7"
                               TextColor="#1B5E20"
                               FontSize="20"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- Resultado -->
            <Frame CornerRadius="15" 
                    HasShadow="True" 
                    BackgroundColor="White"
                    Padding="15">
                <StackLayout Spacing="10">
                    <Label Text="📊 Resultado IMC"
                           TextColor="#607D8B"
                           FontSize="16"/>

                    <Entry Placeholder="0.00"
                           x:Name="IMC"
                           IsReadOnly="True"
                           BackgroundColor="#E8F5E9"
                           TextColor="#1B5E20"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>
                </StackLayout>
            </Frame>

            <!-- Botón -->
            <Button Text="CALCULAR 🔍"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    FontSize="20"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="55"
                    x:Name="btnCalcular"
                    Clicked="btnCalcular_Clicked"
                    Margin="0,10"/>

        </StackLayout>
    </ScrollView>

</ContentPage>